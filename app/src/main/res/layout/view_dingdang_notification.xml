<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dingdang_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_song_title"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="未知歌曲"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/notification_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/notification_song_title"
                android:text="未知歌手"
                android:textSize="18sp" />

        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/notification_time_tv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="64dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Time"-->
        <!--android:textSize="8sp" />-->

        <ImageView
            android:id="@+id/notification_close_notification"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#000"
            android:scaleType="centerInside"
            android:src="@mipmap/push_close" />

        <ImageButton
            android:id="@+id/notification_play_pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/notification_close_notification"
            android:background="#e0FFFFFF"
            android:scaleType="centerInside"/>
    </RelativeLayout>


</LinearLayout>
